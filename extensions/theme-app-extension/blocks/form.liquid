  "name": "New Form",
  "target": "section",
    "enabled_on": {
      "templates": ["product"]
    },
    "stylesheet": "style.css",
    "javascript": "custom.js",
  "settings": [
    {
      "type": "text",
      "id": "form_heading",
      "label": "Form Heading",
      "default": "Contact Us"
    },
    {
      "type": "text",
      "id": "label_name",
      "label": "Full Name Label",
      "default": "Full Name"
    },
    {
      "type": "text",
      "id": "placeholder_name",
      "label": "Full Name Placeholder",
      "default": "Your full name"
    },
    {
      "type": "text",
      "id": "label_email",
      "label": "Email Label",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "placeholder_email",
      "label": "Email Placeholder",
      "default": "Your email address"
    },
    {
      "type": "text",
      "id": "label_phone",
      "label": "Phone Number Label",
      "default": "Phone Number"
    },
    {
      "type": "text",
      "id": "placeholder_phone",
      "label": "Phone Number Placeholder",
      "default": "Your phone number"
    },
    {
      "type": "text",
      "id": "label_subject",
      "label": "Subject Label",
      "default": "Subject"
    },
    {
      "type": "text",
      "id": "placeholder_subject",
      "label": "Subject Placeholder",
      "default": "Subject of your message"
    },
    {
      "type": "text",
      "id": "label_message",
      "label": "Message Label",
      "default": "Message"
    },
    {
      "type": "text",
      "id": "placeholder_message",
      "label": "Message Placeholder",
      "default": "Write your message here..."
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#007BFF"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button Hover Color",
      "default": "#0056b3"
    }
  ]
}
{% endschema %}

